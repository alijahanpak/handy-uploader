{
  "extends": "@vue/tsconfig",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.*"],
  "exclude": ["src/main.ts", "src/App.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "strictNullChecks": false,
    "noImplicitAny": false
  }
}
